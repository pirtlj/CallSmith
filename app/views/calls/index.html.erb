<h1>Listing calls</h1>

<table class="nice">
  <tr>
    <td>Phone Number</td>
    <td>Scheduled for</td>
    <td colspan=3>Actions</td>
  </tr>

<% @calls.each do |call| %>
  <tr>
    <td><%= call.contact.phone_number %></td>
    <td><%= call.scheduled_for %></td>
    <td><%= link_to 'Show', call %></td>
    <td><%= link_to 'Edit', edit_call_path(call) %></td>
    <td><%= link_to 'Destroy', call, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Call', new_call_path %>
