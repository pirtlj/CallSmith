<?xml version="1.0" encoding="UTF-8"?>
<Response>
	
	
	<Say voice="woman">
		Hello Master.
		You have <%= @list.list_contacts.pending.count %> calls scheduled.
		<%if @list.list_contacts.pending.count > 0 %>
		Press dial and I shall connect you to <%= @list.list_contacts.pending.first.contact.first_name%> <%= @list.list_contacts.pending.first.contact.last_name %>.
		<% else %>
			Would you like me to get you some coffee?
			Humans like coffee.
		<% end %>
	</Say>
		
    <Pause length="30"/>

    <Say voice="woman">
		Did you fall asleep?
	</Say>
    
	<Pause length="5"/>
    
	<Say voice="woman">
		Goodbye
	</Say>
</Response>